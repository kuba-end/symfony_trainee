{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Main Page{% endblock %}

{% block content %}

    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                Share your dishes with other users!
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex mt-5">
                    <div class="d-flex flex-column mb-4">
                        <h1 class="text-center mb-4 h4">Upload food photos!</h1>
                        {{ form_start(form, {'attr': {'class' : 'd-flex flex-column mb-4' }}) }}
                        {{ form_row(form.filename) }}
                        <div class="align-self-center">
                        {{ form_row(form.is_public, {'label-attr': {'class' : 'font-weight-bold mt-4 mb-5 ml-2 mr-2'}}) }}
                        </div>
                        <input type="submit" value="Upload" class="form-control btn btn-success w-50 align-self-center" />

                        {{ form_end(form) }}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                         {% for message in app.flashes('error') %}
                             <div class="alert alert-danger">
                                 {{ message }}
                             </div>
                         {% endfor %}
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-6 mt-4">
                <img src="{{ asset('assets/images/demo1.jpg') }}" class="img-fluid" />
            </div>
        </div>


        <div class="card mt-5">
            <div class="card-header">
                User panel
            </div>
            {% if app.user %}
                <div class="row mt-5 mb-5" style="padding-top: 80px; padding-bottom: 80px;">
                    <div class="col-sm-4">
                        <div class="d-flex flex-column align-items-center">
                            <div>
                                <a href="{{ path('my_profile') }}"><img src="{{ asset('assets/images/6.png') }}" class="img-fluid"/></a>
                            </div>
                            <div style="font-size: 24px;">Settings</div>
                            <p class="mt-3 text-center"><a href="{{ path('my_profile') }}">Manage</a> your profile</p>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="d-flex flex-column align-items-center">
                            <div>
                                <a href="{{ path('my_photos') }}"><img src="{{ asset('assets/images/5.png') }}" class="img-fluid"/></a>
                            </div>
                            <div style="font-size: 24px;">Your content</div>
                            <p class="mt-3 text-center"><a href="{{ path('my_photos') }}">Check</a> your photos</p>
                        </div></div>
                    <div class="col-sm-4">
                        <div class="d-flex flex-column align-items-center">
                            <div>
                                <a href="{{ path('latest_photos') }}"><img src="{{ asset('assets/images/4.png') }}" class="img-fluid"/></a>
                            </div>
                            <div style="font-size: 24px;">Discover!</div>
                            <p class="mt-3 text-center"><a href="{{ path('latest_photos') }}">Browse</a> content</p>
                        </div>
                    </div>

                </div>

            {% else %}
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card-body">
                            <h5 class="card-title">Register now</h5>
                            <p class="card-text">Share and rate, learn new recipes</p>
                            <a href="{{ path('app_register') }}" class="btn btn-primary">Create account</a>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card-body">
                            <h5 class="card-title text-center mt-5">or</h5>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card-body">
                        <h5 class="card-title">Log in</h5>
                        <p class="card-text">Login to your account and menage your photos</p>
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Log in!</a>
                        </div>
                     </div>
                </div>
            {% endif %}

        </div>


        <div class="row mt-5 mb-5" style="padding-top: 80px; padding-bottom: 80px;">
            <div class="col-sm-4">
                <div class="d-flex flex-column align-items-center">
                    <div><img src="{{ asset('assets/images/1.png') }}" class="img-fluid"/> </div>
                    <div style="font-size: 24px;">Upload your photos</div>
                    <p class="mt-3 text-center">Upload your photos with no limit. Remember to upload only image files</p>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="d-flex flex-column align-items-center">
                    <div><img src="{{ asset('assets/images/2.png') }}" class="img-fluid"/> </div>
                    <div style="font-size: 24px;">Free user account</div>
                    <p class="mt-3 text-center">Create free account and use it with no limits.</p>
                </div></div>
            <div class="col-sm-4">
                <div class="d-flex flex-column align-items-center">
                    <div><img src="{{ asset('assets/images/3.png') }}" class="img-fluid"/> </div>
                    <div style="font-size: 24px;">Be a creator of this site</div>
                    <p class="mt-3 text-center">Every photo you upload creating this site. Every public photo make difference</p>
                </div>
            </div>

        </div>
    </div>

    <section class="bg-dark" style="height: 100%">
        <div class="container text-white">
            <h3 class="text-center text-white h1 font-weight-lighter" style="padding-top: 120px;">Data in cloud</h3>
            <p class="pt-5 pb-5 font-weight-lighter text-center">Your photos will be stored in cloud. You can access them from around the world.</p>
            <div class="row pt-5" style="padding-bottom: 120px;">

                <div class="col-lg-3 col-md-6">
                    <div class="member">
                        <div class="member-info">
                            <div class="member-info-content">
                                <h4>1. Register</h4>
                                <span>Firtst things first. Create an account.</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="member">
                        <div class="member-info">
                            <div class="member-info-content">
                                <h4>2. Log in</h4>
                                <span>Next login with your credentials</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="member">
                        <div class="member-info">
                            <div class="member-info-content">
                                <h4>3. Upload photo</h4>
                                <span>Add photos as private or public</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="member">
                        <div class="member-info">
                            <div class="member-info-content">
                                <h4>4. Watch photos</h4>
                                <span>Watch all public photos of all users</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>

{% endblock %}
