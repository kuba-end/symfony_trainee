{% extends "base.html.twig" %}

{% block title %}{{ parent() }}Latest photos{% endblock %}

{% block content %}
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h1 class="mt-5 mb-4 h4">Latest users photos</h1>
    </div>

    {% for photo in latestPhotosPublic %}

        <div class="mt-5">
            <div class="row">
                <div class="col-sm-12 col-lg-4">
                    <div class="card-deck">
                        <div class="card d-flex justify-content-between">
                            <div class="imageGallery1">
                                <a href="/images/hosting/{{ photo.filename }}"><img src="/images/hosting/{{ photo.filename }}" class="card-img-top" alt=""></a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Wysłano: {{ photo.uploadedAt | date("d-m-Y H:i:s") }}</small>
                                <small class="text-muted">Dodał: {{ photo.user.username }}</small>
                                <p>
                                    <a href="#" class="badge bg-danger">Usuń</a>
                                    <a href="{{ path('my_photo_set_as_private', {'id': photo.id}) }}" class="badge bg-primary">Ustaw prywatne</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}